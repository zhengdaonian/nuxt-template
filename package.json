    ],
    "*.{css,html}": [
      "stylelint --cache --fix"
    ]
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.31.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "commitizen": "^4.2.5",
    "cz-git": "^1.3.12",
    "eslint": "^8.28.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "nuxt": "3.0.0",
    "typescript": "^4.9.3"
  }
}
